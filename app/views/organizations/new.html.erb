<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Create New Organization</h1>
      <p class="text-gray-600 mt-2">Set up a new organization with custom access controls and participation rules.</p>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
      <%= form_with model: @organization, local: true, class: "space-y-6" do |form| %>
        <% if @organization.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@organization.errors.count, "error") %> prohibited this organization from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @organization.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :org_type, class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :org_type,
                          Organization.org_types.keys.map { |type| [type.humanize, type] },
                          {},
                          class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Age-Based Settings</h3>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= form.label :min_age, "Minimum Age", class: "block text-sm font-medium text-gray-700" %>
              <%= form.number_field :min_age,
                                   min: 0,
                                   max: 120,
                                   class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
              <p class="mt-1 text-xs text-gray-500">Leave blank for no minimum age</p>
            </div>

            <div>
              <%= form.label :max_age, "Maximum Age", class: "block text-sm font-medium text-gray-700" %>
              <%= form.number_field :max_age,
                                   min: 0,
                                   max: 120,
                                   class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
              <p class="mt-1 text-xs text-gray-500">Leave blank for no maximum age</p>
            </div>
          </div>

          <div class="mt-4 space-y-4">
            <div class="flex items-center">
              <%= form.check_box :allow_minors, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <%= form.label :allow_minors, "Allow minors to join this organization", class: "ml-2 block text-sm text-gray-900" %>
            </div>

            <div class="flex items-center">
              <%= form.check_box :requires_parental_consent, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <%= form.label :requires_parental_consent, "Require parental consent for minors", class: "ml-2 block text-sm text-gray-900" %>
            </div>
          </div>
        </div>

        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
          <%= link_to "Cancel", organizations_path,
                      class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= form.submit "Create Organization",
                          class: "bg-blue-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
