<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">My Organizations</h1>
    <%= link_to "Create New Organization", new_organization_path,
                class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if @organizations.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @organizations.each do |organization| %>
        <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
          <div class="flex justify-between items-start mb-4">
            <h2 class="text-xl font-semibold text-gray-900"><%= organization.name %></h2>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <%= organization.org_type.humanize %>
            </span>
          </div>

          <div class="space-y-2 mb-4">
            <p class="text-sm text-gray-600">
              <strong>Members:</strong> <%= organization.active_members_count %>
            </p>
            <p class="text-sm text-gray-600">
              <strong>Your Role:</strong>
              <span class="font-medium">
                <%= current_user.memberships.find_by(organization: organization)&.role&.humanize %>
              </span>
            </p>
            <% if organization.min_age || organization.max_age %>
              <p class="text-sm text-gray-600">
                <strong>Age Range:</strong>
                <%= organization.min_age || 'Any' %> - <%= organization.max_age || 'Any' %>
              </p>
            <% end %>
          </div>

          <div class="flex space-x-2">
            <%= link_to "View", organization_path(organization),
                        class: "bg-gray-600 hover:bg-gray-700 text-white text-sm font-medium py-2 px-3 rounded" %>

            <% if current_user.memberships.find_by(organization: organization)&.role == 'admin' %>
              <%= link_to "Analytics", analytics_organization_path(organization),
                          class: "bg-green-600 hover:bg-green-700 text-white text-sm font-medium py-2 px-3 rounded" %>
              <%= link_to "Members", members_organization_path(organization),
                          class: "bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium py-2 px-3 rounded" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-gray-400 mb-4">
        <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No Organizations Yet</h3>
      <p class="text-gray-600 mb-6">Get started by creating your first organization.</p>
      <%= link_to "Create Organization", new_organization_path,
                  class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>