<div class="space-y-8">
  <div>
    <h2 class="text-center text-2xl font-bold text-gray-900 mb-2">
      Edit Profile
    </h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |form| %>
    <div class="space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :first_name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :first_name, class: "mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-medium text-gray-800 transition-all duration-150" %>
        </div>
        <div>
          <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :last_name, class: "mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-medium text-gray-800 transition-all duration-150" %>
        </div>
      </div>

      <div>
        <%= form.label :date_of_birth, class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :date_of_birth, class: "mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-medium text-gray-800 transition-all duration-150" %>
        <p class="mt-1 text-sm text-gray-500">Required for age verification and appropriate content access</p>
      </div>

      <div>
        <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email, class: "mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-medium text-gray-800 transition-all duration-150" %>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-medium text-gray-700" %> <i>(leave blank if you don't want to change it)</i><br />
        <%= form.password_field :password, class: "mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-medium text-gray-800 transition-all duration-150" %>
      </div>

      <div>
        <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password_confirmation, class: "mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-medium text-gray-800 transition-all duration-150" %>
      </div>

      <div>
        <%= form.label :current_password, class: "block text-sm font-medium text-gray-700" %> <i>(we need your current password to confirm your changes)</i><br />
        <%= form.password_field :current_password, class: "mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-medium text-gray-800 transition-all duration-150" %>
      </div>
    </div>

    <div>
      <%= form.submit "Update", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-xl shadow-sm text-base font-semibold text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all" %>
    </div>
  <% end %>
</div>